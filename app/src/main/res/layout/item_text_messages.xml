<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:id="@+id/FrameLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:id="@+id/message_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:background="?attr/colorAccent"
    tools:ignore="UselessParent">

    <TextView
        android:id="@+id/sending_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:minWidth="120dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:text="hi im ur friend and i always wants the best for you"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="?attr/tc_bold"
        tools:ignore="RtlSymmetry,SmallSp" />
    <TextView
        android:id="@+id/sending_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sending_message"
        android:layout_alignEnd="@id/sending_message"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textColor="?attr/tc_bold"
        android:text="3/15/2018 3:00 PM"/>


</RelativeLayout>

</FrameLayout>